# Partie layout pour lancer l'applicationn




<MenuPrincipal@BoxLayout>:
    orientation: "vertical"
    Button:
        text: "Layouts"
        on_press: app.manager.push("LayoutExemplesTabs")
    Button:
        text: "Widgets"
        on_press: app.manager.push("WidgetsExemple")
    Button:
        text: "Images"
        on_press: app.manager.push("ImagesExemple")

#<MyScreenManager@NavigationScreenManager>: vous definissez cette classe dans
#fichier main.py puis vous le retournez dans la fonction builder pour le lancer comme notre premier screen manager
# il va herit√© navigationScreenManager une classe que nous avons creer dans le fichier
# navigation_screen_manager.py

<MyScreenManager>:
    Screen:
        name: "MenuPrincipal"
        MenuPrincipal:

    Screen:
        name: "WidgetsExemple"
        BoxLayoutWithActionBar:
            title: "Widgets"
            WidgetExempleSecond:
    Screen:
        name:"ImagesExemple"
        BoxLayoutWithActionBar:
            title: "Image"
            ImagesExample
    Screen:
        name:"LayoutExemplesTabs"
        BoxLayoutWithActionBar:
            title: "Layout"
            LayoutExemplesTabs


